{
  "name": "cosmetics-api",
  "version": "0.0.1",
  "description": "Cosmetics Platform API",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && cp -r public dist/ 2>/dev/null || true",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "nest start",
    "dev": "kill-port 5001 && ts-node-dev --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/main.ts",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "migrate": "node migrate",
    "migrate:create": "./node_modules/.bin/migrate create",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.3.7",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/serve-static": "^3.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^10.3.7",
    "@sendgrid/mail": "^8.1.6",
    "@socket.io/redis-adapter": "^8.2.1",
    "axios": "^1.13.2",
    "bullmq": "^5.56.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "fluent-ffmpeg": "^2.1.3",
    "ioredis": "^5.6.1",
    "lodash": "^4.17.21",
    "migrate": "^2.1.0",
    "moment": "^2.30.1",
    "mongodb": "^6.17.0",
    "mongoose": "^8.15.2",
    "multer": "^1.4.5-lts.1",
    "mustache": "^4.2.0",
    "passport": "^0.7.0",
    "qs": "^6.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6",
    "socket.io": "^4.7.4",
    "tmp": "^0.2.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@types/express": "^5.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/lodash": "^4.17.16",
    "@types/multer": "^1.4.11",
    "@types/mustache": "^4.2.6",
    "@types/node": "^22.10.7",
    "@types/qs": "^6.14.0",
    "@types/tmp": "^0.2.6",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.0.0",
    "kill-port": "^2.0.1",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
